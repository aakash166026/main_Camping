<% layout('layout/boilerplate') %>
    <div class="container d-flex align-item-center justify-content-center">
        <div class="row">
            <div class=" col-xl-12 ">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top"
                        src="https://images.unsplash.com/photo-1492648272180-61e45a8d98a7?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NDd8fGNhbXBpbmd8ZW58MHx8MHx8fDA%3D-----"
                        alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title text-center">Register new user!!</h5>
                        <form class='needs-validation' action="/register" method="POST" novalidate>

                            <div class="form-group my-2">
                                <label for="username">Username</label>
                                <input class="form-control" type="text" id="username" name='username' autofocus
                                    required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>

                            <div class="form-group my-2">
                                <label for="password">Password</label>
                                <input class="form-control" type="password" id="password" name='password' required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>

                            <div class="form-group my-2">
                                <label for="email">E-mail</label>
                                <input class="form-control" type="email" id="email" name='email' required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <button class=" btn btn-success "> Register</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>